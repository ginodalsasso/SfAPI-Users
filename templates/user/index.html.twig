{% extends 'base.html.twig' %}

{% block title %}Hello ApiController!{% endblock %}

{% block body %}
<h1>Users</h1>

<div class="users">
    {% for user in users.results %}
        <div class="user">
            <div class="top">
                <div>
                    <h2> {{user.name.title}} {{user.name.last}} {{user.name.first}} </h2>
                    <p class="txt-light"> {{user.email}} </p>
                    <p class="txt-light"> {{user.phone}} </p>
                </div>
                <div>
                    <img src="{{user.picture.large}}" alt="">
                </div>
            </div>
            <div class="details">
                <div>
                    {{user.location.street.number}} {{user.location.street.name}} <br>
                    <p> {{user.location.postcode}} {{user.location.city}} </p>
                    <p> {{user.location.country}} </p>
                </div>
                <div>
                    <p class="plus"><a href=""></a></p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
